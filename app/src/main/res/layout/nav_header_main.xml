<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/nav_header_vertical_margin"
    android:paddingLeft="@dimen/nav_header_vertical_margin"
    android:paddingRight="@dimen/nav_header_vertical_margin"
    android:paddingTop="@dimen/nav_header_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">
    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/settings"
        android:background="@color/colorWhite"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageView"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:src="@drawable/avatar_moss" />
        <LinearLayout
            android:paddingLeft="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <pttextview.widget.PTTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/nav_header_vertical_spacing"
                android:text="@string/tejumola_david"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="16sp"
                app:typeface="pt_mono_bold" />

            <pttextview.widget.PTTextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/role"
                android:textColor="@color/colorLightGrey"
                android:textSize="14sp"
                android:paddingTop="3dp"
                app:typeface="pt_sans_narrow_regular"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
